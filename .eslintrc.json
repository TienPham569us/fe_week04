{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "eslint-config-prettier",
    "prettier",
    "next/core-web-vitals", 
    "next/typescript"
  ],
  "rules": {
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "no-console": ["warn"],
    "arrow-parens": ["warn", "always"]
  }
 
}
